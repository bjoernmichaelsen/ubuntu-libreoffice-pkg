+    // If item is a separator, the last section of the menu is removed.
+    if ( pItem->mnType != MENUITEM_SEPARATOR )
+    {
+        if ( pItem->maCommand ) {
+            GLOActionGroup* pActionGroup = G_LO_ACTION_GROUP( GetActionGroupFromMenubar( this ) );
