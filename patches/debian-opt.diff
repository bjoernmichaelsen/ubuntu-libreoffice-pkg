 config_host.mk.in | 1 +
 configure.ac      | 3 +++
 2 files changed, 4 insertions(+)

diff --git a/config_host.mk.in b/config_host.mk.in
index 57e0574..2ad8cc0 100644
--- a/config_host.mk.in
+++ b/config_host.mk.in
@@ -70,6 +70,7 @@ export CPPUNIT_CFLAGS=$(gb_SPACE)@CPPUNIT_CFLAGS@
 export CPPUNIT_LIBS=$(gb_SPACE)@CPPUNIT_LIBS@
 export CPU=@CPU@
 export CPUNAME=@CPUNAME@
+export CDEFAULTOPT=@CDEFAULTOPT@
 export CROSS_COMPILING=@CROSS_COMPILING@
 export CURL=@CURL@
 export CURL_CFLAGS=$(gb_SPACE)@CURL_CFLAGS@
diff --git a/configure.ac b/configure.ac
index a7371c9..a201533 100644
--- a/configure.ac
+++ b/configure.ac
@@ -12502,6 +12502,9 @@ fi
 AC_SUBST(MPL_SUBSET)
 
 
+CDEFAULTOPT=`echo $CFLAGS 2>/dev/null | grep -E -o "\-O[[0-3]]"`
